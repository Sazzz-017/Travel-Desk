<mvc:View controllerName="myprom.controller.EmployeeCreate"
          xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
          xmlns="sap.m">
    <Page id="page" title="{i18n>employeetitle}">
        <FlexBox id="flx1" width="100%" height="100%" alignItems="Center" justifyContent="Center">
            <Panel id="pnl1" width="100%" headerText="Add your Data">
                <VBox id="vbox2">
                    <HBox id="hbox1" justifyContent="SpaceBetween">
                        <Label id="lb1" text="Enter Name: "></Label>
                        <Input id="inp1" placeholder="Name"></Input>
                    </HBox>
                    <HBox id="hbox2" justifyContent="SpaceBetween">
                        <Label id="lb2" text="Enter Email: "></Label>
                        <Input id="inp2" placeholder="email"></Input>
                    </HBox>
                    <HBox id="hbox3" justifyContent="SpaceBetween">
                        <Label id="lb3" text="Enter Department: "></Label>
                        <Input id="inp3" placeholder="department"></Input>
                    </HBox>
                    <Button text="Save and Create Travel Request" press="onSave"/>
                </VBox>
            </Panel>
        </FlexBox>
    </Page>
</mvc:View>